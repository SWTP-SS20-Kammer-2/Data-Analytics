      "type": "request",
      "api_key_name": "test",
      "url_pattern": "https://www.test.de?test1={config_1}&test2=Test2&key={_api_key}"
    },
    {
      "type": "request_multiple",
      "api_key_name": "test",
      "steps_value": [
        "Hallo",
        "Test",
        "Hallo2"
      ],
      "use_loop_as_key": true,
      "url_pattern": "https://www.test.de?test={_loop}&test1={config|test}&key={_api_key}&city={config|city}"
    },
    {
      "type": "request_multiple_custom",
      "requests": [
        {
          "type": "request",
          "api_key_name": "test",
          "url_pattern": "https://www.test.de?test1={config|test}&test2=Test2&key={_api_key}"
        },
        {
          "type": "request",
          "api_key_name": "test2",
          "url_pattern": "https://www.test2.de?test1=hallo"
        }
      ]
    }
  ],
  "transform": [
    {
      "type": "transform_array",
      "array_key": "_req",
      "transform": [
        {
          "type": "select",
          "relevant_keys": [
            "_loop|data"
          ]
        },
        {
          "type": "select_range",
          "sub_key": "data",
          "range_start": 0,
          "range_end": 5
        },
        {
          "type": "transform_array",
          "array_key": "data",
          "transform": [
            {
              "type": "select",
              "array_key": "data",
              "relevant_keys": [
                "_loop|date",
                "_loop|tommorow",
                "_loop|hallo",
                "_loop|test",
                "_loop|text",
                "_loop|test"
              ]
            },
            {
              "type": "append",
              "key": "max_temp",
              "new_key": "summaries|{_idx}|max_temp"
            }
          ]
        },
        {
          "type": "add_symbole",
          "keys": [
            "_loop|test"
          ],
          "pattern": "{_key} test"
        },
        {
          "type": "replace",
          "keys": [
            "_loop|pressure",
            "_loop|dec"
          ],
          "new_keys": [
            "_loop|new_pres",
            "_loop|new_dec"
          ],
          "old_value": ".",
          "new_value": ",",
          "count": 1
        },
        {
          "type": "alias",
          "keys": [
            "_loop|hallo",
            "_loop|test"
          ],
          "new_keys": [
            "_loop|abc",
            "_loop|def"
          ]
        },
        {
          "type": "date_format",
          "keys": [
            "_loop|date",
            "_loop|tommorow"
          ],
          "format": "%Y-%m-%d"
        },
        {
          "type": "date_weekday",
          "keys": [
            "date",
            "tomorrow"
          ],
          "format": "weekday"
        }
      ]
    },
    {
      "type": "date_now",
      "key": "_loop|date",
      "format": "%Y-%m-%d"
    },
    {
      "type": "loop",
      "values": [
        0,
        1,
        2,
        3,
        4,
        5
      ],
      "transform": [
        {
          "type": "calculate",
          "action": "mean",
          "key": "summaries|{_loop}|max_temp",
          "new_key": "summaries|{_loop}|temp_avg"
        },
        {
          "type": "calculate",
          "action": "max",
          "key": "summaries|{_loop}|max_temp"
        }
      ]
    }
  ],
  "images": {
